{
  "id": null,
  "uid": "otel-app-telemetry",
  "title": "App + OTEL Telemetry",
  "tags": ["otel", "fastapi", "prometheus"],
  "timezone": "browser",
  "schemaVersion": 30,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Spans Received by OTEL Collector",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "rate(otelcol_receiver_accepted_spans_total[1m])",
          "legendFormat": "{{receiver}}",
          "refId": "A"
        }
      ],
      "datasource": "Prometheus"
    },
    {
      "type": "timeseries",
      "title": "HTTP Requests per Second",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "rate(http_server_duration_seconds_count[1m])",
          "legendFormat": "{{instance}}",
          "refId": "B"
        }
      ],
      "datasource": "Prometheus"
    },
    {
      "type": "timeseries",
      "title": "Access Checks per Second",
      "gridPos": { "x": 0, "y": 6, "w": 8, "h": 6 },
      "targets": [
        {
          "expr": "rate(otelcol_receiver_accepted_spans_total{span_name=\"check_access\"}[1m])",
          "legendFormat": "{{instance}}",
          "refId": "C"
        }
      ],
      "datasource": "Prometheus"
    },
        {
      "type": "timeseries",
      "title": "Access Checks Granted per Second",
      "gridPos": { "x": 8, "y": 6, "w": 8, "h": 6 },
      "targets": [
        {
          "expr": "rate(otelcol_receiver_accepted_spans_total{span_name=\"check_access\", check_allowed=\"true\"}[1m])",
          "legendFormat": "{{instance}}",
          "refId": "D"
        }
      ],
      "datasource": "Prometheus"
    },
    {
      "type": "timeseries",
      "title": "Access Checks Denied per Second",
      "gridPos": { "x": 16, "y": 6, "w": 8, "h": 6 },
      "targets": [
        {
          "expr": "rate(otelcol_receiver_accepted_spans{span_name=\"check_access\", check_allowed=\"false\"}[1m])",
          "legendFormat": "{{instance}}",
          "refId": "E"
        }
      ],
      "datasource": "Prometheus"
    },
    {
      "type": "timeseries",
      "title": "Up Status",
      "gridPos": { "x": 0, "y": 12, "w": 24, "h": 6 },
      "targets": [
        {
          "expr": "up",
          "legendFormat": "{{instance}}",
          "refId": "F"
        }
      ],
      "datasource": "Prometheus"
    }
  ]
}